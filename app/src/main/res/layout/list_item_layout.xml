<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#eeeeee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Casanare"
        android:id="@+id/textViewDepartamento"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#323131" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Yopal"
        android:id="@+id/textViewCapital"
        android:layout_below="@+id/textViewDepartamento"
        android:layout_alignParentStart="true"
        android:textColor="#323131" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="170000 Hab"
        android:id="@+id/textViewHabitantes"
        android:layout_alignBottom="@+id/imageViewBandera"
        android:layout_alignParentStart="true"
        android:textColor="#323131" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/imageViewBandera"
        android:src="@drawable/casanare"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd" />
</RelativeLayout>